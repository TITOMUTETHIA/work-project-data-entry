﻿@using Microsoft.AspNetCore.Components.Authorization

<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">WorkTicketApp</a>
    </div>
</div>

<input type="checkbox" title="Navigation menu" class="navbar-toggler" />

<div class="nav-scrollable" onclick="document.querySelector('.navbar-toggler').click()">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="dashboard">
                <i class="fa-solid fa-gauge" aria-hidden="true"></i> Dashboard
            </NavLink>
        </div>

        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <i class="fa-solid fa-plus" aria-hidden="true"></i> New Ticket
            </NavLink>
        </div>

        <AuthorizeView>
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="work-tickets">
                    <i class="fa-solid fa-list" aria-hidden="true"></i> Ticket List
                </NavLink>
            </div>
        </AuthorizeView>
        
        <AuthorizeView Roles="Admin">
            <div class="nav-item px-3">
                <NavLink class="nav-link" href="admin/users">
                    <i class="fa-solid fa-users" aria-hidden="true"></i> User Management
                </NavLink>
            </div>
        </AuthorizeView>

        <AuthorizeView>
            <div class="nav-item px-3 text-white mt-3">
                <i class="fa-solid fa-user" aria-hidden="true"></i>
                <span class="ms-2">@context.User.Identity?.Name</span>
            </div>
            <div class="nav-item px-3">
                <form action="/api/auth/logout" method="post">
                    <AntiforgeryToken />
                    <button type="submit" class="nav-link btn btn-link text-white">
                        <i class="fa-solid fa-right-from-bracket" aria-hidden="true"></i>
                        <span class="ms-2">Logout</span>
                    </button>
                </form>
            </div>
        </AuthorizeView>

        <AuthorizeView>
            <NotAuthorized>
                <div class="nav-item px-3">
                    <NavLink class="nav-link" href="account/login">
                        <i class="fa-solid fa-right-to-bracket" aria-hidden="true"></i> Login
                    </NavLink>
                </div>
            </NotAuthorized>
        </AuthorizeView>
    </nav>
</div>