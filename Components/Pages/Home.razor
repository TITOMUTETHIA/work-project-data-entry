@page "/"
@inherits LayoutComponentBase
@inject IWorkTicketService TicketService
@inject AuthenticationStateProvider AuthStateProvider

<div class="page">
    <main>
        <div class="top-row px-4">
            <h2 class="text-primary mb-4">Chrome Partners Data Entry</h2>
        </div>

        <article class="px-4 mt-4">
            <div class="card shadow-sm p-4">
                <h3 class="text-primary mb-3">📊 Enter Work Ticket Data</h3>
                <p class="text-muted">
                    Welcome to Chrome Partners Data Entry. Please fill in the required fields below to record operational data.
                </p>

                @if (showSuccess)
                {
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>Success!</strong> Ticket saved successfully.
                        <button type="button" class="btn-close" @onclick="() => showSuccess = false" aria-label="Close"></button>
                    </div>
                }

                <EditForm Model="@ticket" OnValidSubmit="HandleValidSubmit">
                    <DataAnnotationsValidator />
                    <ValidationSummary class="alert alert-danger" />

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Work Ticket Number</label>
                            <InputText @bind-Value="ticket.TicketNumber" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Cost Centre</label>
                            <InputText @bind-Value="ticket.CostCentre" class="form-control" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Activity</label>
                            <InputText @bind-Value="ticket.Activity" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Operator Name</label>
                            <InputText @bind-Value="ticket.OperatorName" class="form-control" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Number of Operators</label>
                            <InputNumber @bind-Value="ticket.NumOperators" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Material Used</label>
                            <InputText @bind-Value="ticket.MaterialUsed" class="form-control" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Start Date & Time</label>
                            <InputDate @bind-Value="ticket.StartDateTime" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">End Date & Time</label>
                            <InputDate @bind-Value="ticket.EndDateTime" class="form-control" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Start Counter</label>
                            <InputNumber @bind-Value="ticket.StartCounter" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">End Counter</label>
                            <InputNumber @bind-Value="ticket.EndCounter" class="form-control" />
                        </div>
                    </div>

                    <div class="row mb-3">
                        <div class="col-md-6">
                            <label class="form-label">Quantity In</label>
                            <InputNumber @bind-Value="ticket.QuantityIn" class="form-control" />
                        </div>
                        <div class="col-md-6">
                            <label class="form-label">Quantity Out</label>
                            <InputNumber @bind-Value="ticket.QuantityOut" class="form-control" />
                        </div>
                    </div>

                    <div class="d-flex justify-content-end mt-4">
                        <button type="submit" class="btn btn-success me-2">💾 Save</button>
                        <button type="reset" class="btn btn-secondary">🧹 Clear</button>
                    </div>
                </EditForm>
            </div>
        </article>
    </main>
</div>

@code {
    private WorkTicket ticket = new();
    private bool showSuccess = false;

    protected override void OnInitialized()
    {
        // Initialize dates to prevent validation issues with default (0001-01-01) values
        ticket.StartDateTime = DateTime.Now;
        ticket.EndDateTime = DateTime.Now;
    }

    private async Task HandleValidSubmit()
    {
        var authState = await AuthStateProvider.GetAuthenticationStateAsync();
        var user = authState.User;

        ticket.CreatedBy = user.Identity?.Name ?? "Anonymous";
        
        await TicketService.CreateWorkTicketAsync(ticket);
        
        showSuccess = true;
        
        // Reset form for the next entry
        ticket = new WorkTicket { StartDateTime = DateTime.Now, EndDateTime = DateTime.Now };
        
        // Auto-hide success message after a few seconds
        _ = Task.Delay(3000).ContinueWith(_ => InvokeAsync(() => { showSuccess = false; StateHasChanged(); }));
    }
}
