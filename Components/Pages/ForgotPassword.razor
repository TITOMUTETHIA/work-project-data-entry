@page "/account/forgot-password"
@using System.ComponentModel.DataAnnotations
@using WorkTicketApp.Services
@inject IUserService UserService
@inject IEmailService EmailService
@inject NavigationManager NavigationManager

<PageTitle>Forgot Password</PageTitle>

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h3 class="mb-0">Forgot Password</h3>
                </div>
                <div class="card-body">
                    @if (submitted)
                    {
                        <div class="alert alert-success">
                            If an account exists for <strong>@model.Username</strong>, you will receive an email with instructions to reset your password.
                        </div>
                        <a href="/account/login" class="btn btn-link">Back to Login</a>
                    }
                    else
                    {
                        <p>Enter your username (or email) to receive a password reset link.</p>
                        <EditForm Model="@model" OnValidSubmit="HandleSubmit">
                            <DataAnnotationsValidator />
                            <div class="mb-3">
                                <label class="form-label">Username / Email</label>
                                <InputText @bind-Value="model.Username" class="form-control" />
                                <ValidationMessage For="@(() => model.Username)" />
                            </div>
                            <button type="submit" class="btn btn-primary w-100">Send Reset Link</button>
                        </EditForm>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

@code {
    private ForgotPasswordModel model = new();
    private bool submitted = false;

    private class ForgotPasswordModel
    {
        [Required]
        public string Username { get; set; } = "";
    }

    private async Task HandleSubmit()
    {
        var token = await UserService.GeneratePasswordResetTokenAsync(model.Username);
        
        if (token != null)
        {
            var resetLink = NavigationManager.GetUriWithQueryParameters(
                NavigationManager.ToAbsoluteUri("/account/reset-password").AbsoluteUri, 
                new Dictionary<string, object?> { ["token"] = token, ["username"] = model.Username });

            await EmailService.SendPasswordResetEmailAsync(model.Username, resetLink);
        }

        // Always show success message to prevent user enumeration
        submitted = true;
    }
}